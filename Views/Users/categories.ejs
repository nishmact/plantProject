<%- include('../Layouts/header.ejs') %>

<div class="container-fluid product py-3 my-5">
    <div class="container">
        <% categories.forEach(category => { %>
            <div style="width: 100%; height: 55px;background: linear-gradient(to right, #083b3b, #c8d8d8);">
                <p style="color: white; font-size: 20px; font-weight: bold; margin-left: 20px;"><%= category.name %><a href="/products?search=<%= category.name %>" class="btn btn-light rounded-pill  animated zoomIn " style="margin-left: 950px; padding: 7px; margin-top: 7px; width: 160px;">Explore More</a></p>
            </div>
            <div style="background-color: white;">
                <ul style="list-style: none; padding: 0; margin: 0; display: flex; flex-wrap: wrap;">
                    <% category.items.forEach(item => { %>
                        <li style="width: 25%; padding: 10px;">
                           
                            <img src="<%= item.product.image[0] %>" alt="<%= item.product.name %>" style="margin-top: 20px; width: 250px; height: 250px; margin-left: 20px;">
                            <p style="text-align: center; font-size: 20px; font-weight: bold; margin-top: 20px; margin-bottom: 5px;" ><%= item.product.name %></p>
                            <p style="text-align: center; margin-top: 0px; font-weight: bold;"> &#8377;<%= item.product.discountedPrice%></p>
                        </li>
                    <% }); %>
                </ul>
            </div>
        <% }); %>
    </div>
</div>

<%- include('../Layouts/footer.ejs') %>
